{
  "devDependencies": {
    "htmllint": "^0.8.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0"
  },
  "scripts": {
    "prettier": "npx prettier --check *.html",
    "prettier:fix": "npx prettier --write *.html",
    "htmlhint": "npx htmlhint *.html",
    "stylelint": "npx stylelint *.css",
    "stylelint:fix": "npx stylelint *.css --fix",
    "precommit": "npm run prettier && npm run htmlhint && npm run stylelint",
    "precommit:fix": "npm run prettier:fix && npm run htmlhint && npm run stylelint"
  }
}
